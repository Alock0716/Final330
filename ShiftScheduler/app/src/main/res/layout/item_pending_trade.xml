<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="14dp">

        <!-- DATE -->
        <TextView
            android:id="@+id/textPendingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2025-12-01"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#212121" />

        <!-- TIME -->
        <TextView
            android:id="@+id/textPendingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09:00 - 17:00"
            android:textSize="15sp"
            android:textColor="#424242"
            android:layout_marginTop="3dp" />

        <!-- ROLE -->
        <TextView
            android:id="@+id/textPendingRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Front Desk"
            android:textSize="15sp"
            android:textColor="#424242"
            android:layout_marginTop="3dp" />

        <!-- STATUS -->
        <TextView
            android:id="@+id/textPendingStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pending Trade Approval"
            android:textSize="14sp"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_marginTop="8dp" />

        <!-- BUTTON ROW -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="12dp">

            <!-- CANCEL REQUEST -->
            <Button
                android:id="@+id/buttonCancelRequest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel Request"
                android:backgroundTint="@android:color/holo_red_light"
                android:textColor="@android:color/white"
                android:layout_marginEnd="10dp" />

            <!-- ACCEPT TRADE -->
            <Button
                android:id="@+id/buttonAcceptTrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept Trade"
                android:backgroundTint="@android:color/holo_green_dark"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
